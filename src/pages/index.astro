// Projects Array
const projects = [
  {
    title: "Portfolio Website",
    date: "Jan 2026",
    description:
      "A personal portfolio website to showcase my projects, built with Astro, React, and Tailwind CSS.",
    image: "https://cdn.shadcnstudio.com/ss-assets/components/card/image-3.png",
    tech: ["Astro", "React", "Tailwind CSS", "shadcn/ui"],
    url: "#",
  },
  {
