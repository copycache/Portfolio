  { name: "Linux", icon: "/icons/Linux.svg", url: "https://www.linux.org/" },
  { name: "Debian", icon: "/icons/Debian.svg", url: "https://www.debian.org/" },
  { name: "Figma", icon: "/icons/Figma.svg", url: "https://www.figma.com/" },
